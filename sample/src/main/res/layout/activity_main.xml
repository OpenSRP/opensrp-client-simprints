<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/capture_finger_print_btn"
        android:src="@drawable/finger_print"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Finger print"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/verify_btn"
        android:text="Verify finger print"
        android:layout_below="@+id/capture_finger_print_btn"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_status"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>